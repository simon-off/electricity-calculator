@code {
    bool _lightTheme = false;
    bool LightTheme
    {
        get
        {
            return _lightTheme;
        }
        set
        {
            JsRuntime.InvokeVoidAsync("toggleTheme", _lightTheme);
            _lightTheme = !_lightTheme;
        }
    }
}