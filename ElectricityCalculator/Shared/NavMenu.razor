@inject IJSRuntime JsRuntime

<nav class="container-fluid">
    <ul>
        <li>
            <a href="/" class="medium">
                <h2>⚡ Calculator</h2>
            </a>
        </li>
    </ul>
    <ul>
        <li>
            <a href="/about">
                <h2>About</h2>
            </a>
        </li>
        <li>
            <label for="switch">
                <input type="checkbox" id="switch" role="switch" @bind="DarkTheme">
                @(_darkTheme ? "☀" : "🌛")
            </label>
        </li>
    </ul>
</nav>

@code {
    bool _darkTheme = true;
    bool DarkTheme
    {
        get
        {
            return _darkTheme;
        }
        set
        {
            JsRuntime.InvokeVoidAsync("toggleTheme", _darkTheme);
            _darkTheme = !_darkTheme;
        }
    }
}